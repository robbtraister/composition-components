{
  "name": "@composition/components",
  "version": "0.0.0",
  "description": "",
  "main": "./dist",
  "exports": {
    "./components": "./dist/components",
    "./components/app": "./dist/components/app",
    "./components/content": "./dist/components/content",
    "./contexts": "./dist/contexts",
    "./contexts/app": "./dist/contexts/app",
    "./contexts/component": "./dist/contexts/component"
  },
  "scripts": {
    "build": "npm run clean && babel src/ --out-dir dist/ --extensions=.cjs,.cjsx,.js,.jsx,.mjs,.mjsx,.ts,.tsx --ignore=\"**/*.d.ts\" --source-maps",
    "clean": "rm -rf ./dist/*",
    "lint:ts": "eslint --ext .cjs,.cjsx,.js,.jsx,.mjs,.mjsx,.ts,.tsx .",
    "lint": "npm run lint:ts -- --fix",
    "test": "npm audit && tsc --noEmit && npm run lint:ts && jest",
    "prepublishOnly": "npm run test && npm run build",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "watch": "npm run test -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@babel/runtime": "^7.7.7",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^24.0.24",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prettier-config-standard": "^1.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^~/(.*)": "<rootDir>/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/build/",
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "**/*.{cjs,cjsx,js,jsx,mjs,mjsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": "prettier-config-standard"
}
