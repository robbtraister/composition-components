{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ES6"
  },
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    "test"
  ]
}
