{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build",
    "coverage",
    "dist",
    "node_modules"
  ]
}
